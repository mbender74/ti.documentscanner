<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filters"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buttons_filter_height"
    android:clipToPadding="true"
    android:layout_marginTop="10dp"
    tools:showIn="@layout/activity_image_crop">

    <LinearLayout
        android:id="@+id/filter0"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleY="0.6"
        android:scaleX="0.6"
        android:stateListAnimator="@animator/button_filter_grow_animation">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/filter_bg"
            android:backgroundTint="#E2DED2"
            android:gravity="center"
            android:foreground="@drawable/filter_selected"
            android:src="@drawable/filter_photo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleY="0.6"
        android:scaleX="0.6"
        android:stateListAnimator="@animator/button_filter_grow_animation">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/filter_bg"
            android:foreground="@drawable/filter_selected"
            android:src="@drawable/filter_grayscale" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleY="0.6"
        android:scaleX="0.6"
        android:stateListAnimator="@animator/button_filter_grow_animation">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/filter_bg"
            android:foreground="@drawable/filter_selected"
            android:src="@drawable/filter_black_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleY="0.6"
        android:scaleX="0.6"
        android:stateListAnimator="@animator/button_filter_grow_animation">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/filter_bg"
            android:foreground="@drawable/filter_selected"
            android:src="@drawable/filter_color" />
    </LinearLayout>

</LinearLayout>
